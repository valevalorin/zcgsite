<h1>New Podcast</h1>
<%= form_for :podcast, url: podcasts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :audio_file %><br>
    <%= f.text_field :audio %>
  </p>

   <p>
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', podcasts_path %>