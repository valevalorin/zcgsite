<div class="articleInfoBlock">
	<div class="barBlock">
		<div class="titleBar"><%= @article.title %></div><br>
		<div class="dateBar"><%= @article.strftime("%B %d, %Y") %></div>
	</div>
	<div class="bigAuthorBlock">
		<%= image_tag(@author.image, class: "bigAuthorImage") %> <br>
		<div class="bigAuthorName"><%= @author.name %></div>
	</div>
</div>
<div class="articleText">
	<%= @article.html.html_safe%>
</div>