<h1>New Article</h1>
<%= form_for :article, url: articles_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :author%>
    <%= f.select(:author_id, Author.all.collect {|author| [author.name, author.id]}, :prompt => 'Select') %>
  </p>

  <p>
    <%= f.label :image_url, "Title Image Url" %><br>
    <%= f.text_field :title_image %>
  </p>

  Image: &lt;img src="puturlhere"&gt; | Paragraph &lt;p&gt;putstuffhere&lt;/p&gt;

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :html %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>