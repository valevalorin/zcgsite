<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :icon_url, "Icon URL" %><br>
      <%= f.text_field :icon %>
    </p>
    
    <p>
      <%= f.label :time %><br>
      <%= f.time_field :time%> 
    </p>
    <% if params[:day_id] %>
      <%= f.number_field :day_id, class: "hiddenDay",  value: params[:day_id] %>
    <% end %>
    <%= f.submit %>
  </div>
<% end %>
