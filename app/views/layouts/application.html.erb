<!DOCTYPE html>
<html>
<head>
  <title>Zcgsite</title>
  <%= javascript_include_tag 'application'%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 
  <%= javascript_include_tag 'jquery.autoellipsis-1.0.10.min' %>
  <%= csrf_meta_tags %>

</head>
<body>
	<div class="logobox"><img src="/assets/zcglogo.png"></div>
<div class="content">
	<div id="navBar" class="navBar">
		<%= link_to(root_path) do %>
		  <div class="navButton navHome">Home</div>
		<% end %>
		<%= link_to(index_articles_path) do %>
		  <div class="navButton navNews">News</div>
		<% end %>
		<%= link_to(index_podcasts_path) do %>
		  <div class="navButton navCasts">Podcasts</div>
		<% end %>
		<%= link_to(index_comics_path) do %>
		  <div class="navButton navComics">Comics</div>
		<% end %>	
	</div>
	<%= yield %>
</div>


</body>
</html>
